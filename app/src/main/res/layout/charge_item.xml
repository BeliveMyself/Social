<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/id_charge_item_iv_glod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/glod_48"/>

        <TextView
            android:id="@+id/id_charge_item_tv_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 信用"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black_deep"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/id_charge_item_iv_glod"/>

        <TextView
            android:id="@+id/id_charge_item_tv_money"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="$ 1元"
            android:layout_alignParentRight="true"
            android:background="@drawable/money_broder"/>

    </RelativeLayout>

</LinearLayout>