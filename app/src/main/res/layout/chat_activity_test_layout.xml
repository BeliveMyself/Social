<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools">



    <RelativeLayout
        android:id="@+id/id_chat_activity_test_send_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/id_chat_activity_test_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_send_white_24dp"
            android:layout_alignParentRight="true"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/id_chat_activity_test_btn_send"/>
    </RelativeLayout>

    <View
        android:id="@+id/id_chat_activity_test_view"
        android:layout_above="@id/id_chat_activity_test_send_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey"/>

    <ListView
        android:id="@+id/id_chat_activity_test_lisview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/id_chat_activity_test_view"
        android:divider="#0000"
        />


</RelativeLayout>