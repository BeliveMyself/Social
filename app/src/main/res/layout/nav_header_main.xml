<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:context="com.allever.social.MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/id_nav_header_iv_head"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/winchen"
        app:civ_border_width="0.5dp"
        app:civ_border_color="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"/>


    <TextView
        android:id="@+id/id_nav_head_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请登录"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_below="@id/id_nav_header_iv_head"
        android:layout_marginTop="6dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/id_nav_head_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号: "
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/id_nav_head_tv_nickname"/>
    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/id_nav_head_btn_logout"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/id_nav_head_tv_nickname"
        android:text="退出"
        android:visibility="invisible"/>
    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/id_nav_head_btn_login"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/id_nav_head_tv_nickname"
        android:text="登录"/>

</RelativeLayout>
