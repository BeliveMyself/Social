                <com.andexert.library.RippleView
                    android:id="@+id/id_news_detail_rv_audio_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    ripple:rv_centered="false"
                    ripple:rv_rippleDuration="100"
                    ripple:rv_color="@color/color_green_100">
                    <TextView
                        android:id="@+id/id_news_detail_tv_audio_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点我开始"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"/>
                </com.andexert.library.RippleView>

                <!-- 播放/停止按钮 -->
                <com.andexert.library.RippleView
                    android:id="@+id/id_news_detail_rv_play_audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pop_blue_24"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    ripple:rv_centered="false"
                    ripple:rv_rippleDuration="100"
                    ripple:rv_color="@color/color_green_100"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wifi_36"
                        android:padding="10dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/id_news_detail_tv_play_audio_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="播放"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/id_news_detail_iv_delete_record"
