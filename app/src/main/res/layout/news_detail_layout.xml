                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_delete_48"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"/>

                </com.andexert.library.RippleView>

            </RelativeLayout>

        </RelativeLayout>


