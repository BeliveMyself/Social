    <RelativeLayout
        android:id="@+id/id_news_detail_rl_send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/color_green_100">

        <!-- 选择评论类型 -->
        <RelativeLayout
            android:id="@+id/id_news_detail_rv_comment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <com.andexert.library.RippleView
                android:id="@+id/id_news_detail_rv_choose_audio_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ripple:rv_centered="false"
                ripple:rv_rippleDuration="100"
                ripple:rv_color="@color/color_green_100">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/audio_48"
                    android:layout_centerInParent="true"
                    android:padding="10dp"/>
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:id="@+id/id_news_detail_rv_choose_text_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ripple:rv_centered="false"
                ripple:rv_rippleDuration="100"
                ripple:rv_color="@color/color_green_100"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/keyboard_48"
                    android:layout_centerInParent="true"
                    android:padding="10dp"/>
            </com.andexert.library.RippleView>


        </RelativeLayout>

        <!-- 发表评论控件 -->
        <com.andexert.library.RippleView
            android:id="@+id/id_news_detail_rv_add_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            ripple:rv_centered="false"
            ripple:rv_rippleDuration="100"
            ripple:rv_color="@color/color_green_100">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_send_white_24dp"
                android:padding="10dp"
                android:layout_centerInParent="true"
                />
        </com.andexert.library.RippleView>


        <!-- 评论内容区域 -->
        <RelativeLayout
            android:id="@+id/id_news_detail_rl_comment_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
