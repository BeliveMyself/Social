<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/id_regist_fg_iv_head"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/add_head"
        app:civ_border_width="0.5dp"
        android:layout_gravity="center"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/id_regist_fg_et_usermane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_login_fg_et_username"
        android:hint="请输入账号"
        android:inputType="text"
        android:text=""
        android:textCursorDrawable="@drawable/text_cursor_cyan"
        android:textSize="16sp"
        app:met_floatingLabel="highlight"
        app:met_underlineColor="@color/colorPrimaryDark"
        app:met_helperTextColor="@color/colorPrimaryDark"
        app:met_baseColor="@color/colorPrimaryDark"
        app:met_floatingLabelTextColor="@color/colorPrimaryDark"
        app:met_primaryColor="@color/colorPrimaryDark"
        app:met_singleLineEllipsis="true"
        app:met_maxCharacters="20"
        app:met_accentTypeface="fonts/Roboto-LightItalic.ttf"
        app:met_clearButton="true"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/id_regist_fg_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_login_fg_et_username"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:text=""
        android:textCursorDrawable="@drawable/text_cursor_cyan"
        android:textSize="16sp"
        app:met_floatingLabel="highlight"
        app:met_underlineColor="@color/colorPrimaryDark"
        app:met_helperTextColor="@color/colorPrimaryDark"
        app:met_baseColor="@color/colorPrimaryDark"
        app:met_floatingLabelTextColor="@color/colorPrimaryDark"
        app:met_primaryColor="@color/colorPrimaryDark"
        app:met_singleLineEllipsis="true"
        app:met_maxCharacters="20"
        app:met_accentTypeface="fonts/Roboto-LightItalic.ttf"
        app:met_clearButton="true"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/id_regist_fg_et_ensurepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_login_fg_et_username"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:text=""
        android:textCursorDrawable="@drawable/text_cursor_cyan"
        android:textSize="16sp"
        app:met_floatingLabel="highlight"
        app:met_underlineColor="@color/colorPrimaryDark"
        app:met_helperTextColor="@color/colorPrimaryDark"
        app:met_baseColor="@color/colorPrimaryDark"
        app:met_floatingLabelTextColor="@color/colorPrimaryDark"
        app:met_primaryColor="@color/colorPrimaryDark"
        app:met_singleLineEllipsis="true"
        app:met_maxCharacters="20"
        app:met_accentTypeface="fonts/Roboto-LightItalic.ttf"
        app:met_clearButton="true"/>

    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/id_regist_fg_btn_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_regist_fg_et_password"
        android:layout_gravity="right"
        android:text="完成注册"
        />

</LinearLayout>