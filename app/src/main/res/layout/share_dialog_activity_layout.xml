<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/id_share_dialog_activity_ll_iv_container_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true">
        <com.allever.social.view.MySquareImageView
            android:id="@+id/id_share_dialog_activity_iv_qzone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ssdk_oks_classic_qzone"/>
        <com.allever.social.view.MySquareImageView
            android:id="@+id/id_share_dialog_activity_iv_wechat_moment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ssdk_oks_classic_wechatmoments"/>
        <com.allever.social.view.MySquareImageView
            android:id="@+id/id_share_dialog_activity_iv_sina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ssdk_oks_classic_sinaweibo"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_share_dialog_activity_ll_tv_container_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_share_dialog_activity_ll_iv_container_1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="QQ空间"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="微信朋友圈"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="新浪微博"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_share_dialog_activity_ll_iv_container_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/id_share_dialog_activity_ll_tv_container_1"
        android:layout_centerHorizontal="true">
        <com.allever.social.view.MySquareImageView
            android:id="@+id/id_share_dialog_activity_iv_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ssdk_oks_classic_qq"/>
        <com.allever.social.view.MySquareImageView
            android:id="@+id/id_share_dialog_activity_iv_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ssdk_oks_classic_wechat"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_share_dialog_activity_ll_tv_container_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_share_dialog_activity_ll_iv_container_2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="QQ好友"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="微信好友"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>

    <View
        android:id="@+id/id_share_dialog_activity_cut_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/id_share_dialog_activity_ll_tv_container_2"/>






</RelativeLayout>