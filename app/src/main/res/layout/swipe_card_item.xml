<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="170dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/material_card"
        android:orientation="vertical">

        <!--<ImageView-->
            <!--android:id="@+id/helloText"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_marginBottom="50dp"-->
            <!--android:gravity="center"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/card_bg"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="40sp" />-->


        <RelativeLayout
            android:id="@+id/id_swipe_card_item_rl_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/id_swipe_card_item_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nickname"
                android:textSize="16sp"
                android:textColor="@color/black_deep"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:id="@+id/id_swipe_card_item_ll_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/color_red_bg_round"
                android:layout_below="@id/id_swipe_card_item_tv_nickname">
                <TextView
                    android:id="@+id/id_swipe_card_item_tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/btn_white_normal"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:text="女"/>
                <TextView
                    android:id="@+id/id_swipe_card_item_tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/btn_white_normal"
                    android:text="21"
                    android:layout_marginRight="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_swipe_card_item_ll_occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/color_indigo_bg_round"
                android:layout_below="@id/id_swipe_card_item_tv_nickname"
                android:layout_toRightOf="@id/id_swipe_card_item_ll_sex">
                <TextView
                    android:id="@+id/id_swipe_card_item_tv_occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/white"
                    android:text="学生"/>
            </LinearLayout>

            <TextView
                android:id="@+id/id_swipe_card_item_tv_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/id_swipe_card_item_ll_sex"
                android:text="个性签名"
                android:textColor="@color/divider_grey"/>


            <TextView
                android:id="@+id/id_swipe_card_item_tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginRight="10dp"
                android:text="1.0 km"
                android:textColor="@color/divider_grey"
                android:layout_alignParentRight="true"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/id_swipe_card_item_tv_signature"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/id_swipe_card_item_rl_user_info"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_swipe_card_item_iv_img_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:paddingTop="0.1dp"
                android:paddingLeft="0.1dp"
                android:src="@mipmap/logo"
                android:scaleType="centerCrop"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/id_swipe_card_item_iv_img_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="0.1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/logo"/>
                <ImageView
                    android:id="@+id/id_swipe_card_item_iv_img_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:paddingTop="0.1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/logo"/>
                <ImageView
                    android:id="@+id/id_swipe_card_item_iv_img_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="0.1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/logo"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/id_swipe_card_item_swipe_left_indicator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:alpha="0"
        android:background="@drawable/home_card_like" />

    <View
        android:id="@+id/id_swipe_card_item_swipe_right_indicator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:alpha="0"
        android:background="@drawable/home_card_dislike" />



</RelativeLayout>