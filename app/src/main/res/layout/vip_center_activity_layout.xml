            <com.andexert.library.RippleView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:layout_alignParentRight="true"
                ripple:rv_centered="false"
                ripple:rv_rippleDuration="200"
                ripple:rv_color="@color/color_green_100">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    />
            </com.andexert.library.RippleView>


            <LinearLayout
                android:id="@+id/id_vip_center_activity_ll_vip_function1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/id_vip_center_activity_hot_vip_function">
                <com.andexert.library.RippleView
                    android:id="@+id/id_vip_center_activity_rv_visited_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    ripple:rv_centered="false"
                    ripple:rv_rippleDuration="200"
                    ripple:rv_color="@color/color_green_100">

                    <ImageView
                        android:id="@+id/id_vip_center_activity_iv_visited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/ic_looked"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="谁看过我"
                        android:layout_below="@id/id_vip_center_activity_iv_visited"
                        android:layout_centerHorizontal="true"/>

                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    ripple:rv_centered="false"
                    ripple:rv_rippleDuration="200"
                    ripple:rv_color="@color/color_green_100">

                    <ImageView
                        android:id="@+id/id_vip_center_activity_iv_vip_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/vip_48"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="专属标识"
                        android:layout_below="@id/id_vip_center_activity_iv_vip_logo"
                        android:layout_centerHorizontal="true"/>

                </com.andexert.library.RippleView>


                <com.andexert.library.RippleView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    ripple:rv_centered="false"
                    ripple:rv_rippleDuration="200"
                    ripple:rv_color="@color/color_green_100">

                    <ImageView
                        android:id="@+id/id_vip_center_activity_iv_look_user_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/eye_48"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="查看私密"
                        android:layout_below="@id/id_vip_center_activity_iv_look_user_data"
                        android:layout_centerHorizontal="true"/>

                </com.andexert.library.RippleView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/id_vip_center_activity_ll_vip_function2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/id_vip_center_activity_ll_vip_function1">
                <com.andexert.library.RippleView
                    android:id="@+id/id_vip_center_activity_rv_add_recruit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    ripple:rv_centered="false"
                    ripple:rv_rippleDuration="200"
                    ripple:rv_color="@color/color_green_100">

                    <ImageView
                        android:id="@+id/id_vip_center_activity_iv_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/recruit_50"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="发布招聘"
                        android:layout_below="@id/id_vip_center_activity_iv_v"
                        android:layout_centerHorizontal="true"/>

                </com.andexert.library.RippleView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
